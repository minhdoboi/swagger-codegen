name:                {{cabalPackage}}
version:             0.1.0.0
synopsis:            Swagger-codegen example for {{cabalPackage}}
description:         Please see README.md
homepage:            https://github.com/swagger-api/swagger-codegen#readme
license:             Apache-2.0
license-file:        LICENSE
author:              Masahiro Yamauchi
maintainer:          sgt.yamauchi@gmail.com
copyright:           2015- Masahiro Yamauchi
category:            Web
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  hs-source-dirs:      lib
  exposed-modules:   {{apiPackage}}.Utils,
                     {{apiPackage}}.Apis {{#models}}{{#model}}
                     , {{importPath}}{{/model}}{{/models}}
{{#apiInfo}}
{{#apis}}
                     , {{package}}.{{classname}}
{{/apis}}
{{/apiInfo}}
  ghc-options:         -Wall
  build-depends:       base
                     , aeson
                     , http-client
                     , text
                     , split
                     , containers
                     , mtl
                     , network-uri
                     , QuickCheck
                     , servant
                     , servant-client
  default-language:    Haskell2010
